<!doctype html>
<html lang="en" ng-app="noteApp">
  <head>
    <meta charset="UTF-8">
    <title>Tech note</title>
    <link rel="stylesheet" href="/css/font-awesome.css" />
    <link rel="stylesheet" href="/vendor/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/pen.css" />
  </head>

  <body ng-controller="noteCtrl">
    <div class="container">
      <div class="row">
        <br />
        <div class="col-md-8 col-md-offset-4">
          <button type="button" ng-click="save($event)" class="btn btn-primary">Save</button>
          <div>&nbsp;</div>
        </div>
      </div>
      <div class="row">

        <div class="col-md-4">@html.include('list')</div>
        <div class="col-md-8">@html.include('note')</div>

      </div>
    </div>

    @html.include('scripts')


  </body>
</html>
